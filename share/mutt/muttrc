# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
#
# A whole bunch of hooks!
#
#       *-hook pattern COMMAND
#

folder-hook \! 'set hdr_format="%4C %Z %{%b %d} %-15.15L (%4l) %s"'
folder-hook \! 'set strict_threads'
folder-hook +outbox 'set hdr_format="%4C %Z %{%b %d} %-15.15t (%4l) %s"'
